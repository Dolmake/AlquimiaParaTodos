@{
    ViewBag.Title = "Search";
}


<script src="/Scripts/jquery-1.10.2.min.js"
        type="text/javascript">
</script>
<script>

    $(document).ready(function () {
        $("#m_btSearch").click(function () {
           
            invokeFind($("#m_search").val());
            
        });

        function invokeFind(textToFind) {
            $.ajax({
                url: '@Url.Action("Find", "Search")',
                data: { text: textToFind },
                type: "post",
                cache: false,
                success: function (res) {
                    $("#m_content").html(res);
                    //$('td').highlight($("#txBusqueda").val());
                    //$('h3').text('Se han encontrado ' + $('.highlight').length + ' coincidencias');
                },
                error: function () {
                    alert("Se ha producido un error");
                }
            });
        }
    });   
   
</script>

<h2>Buscar Productos</h2>
@Html.Label("Introduzca el texto: ")


<input id="m_search" type="text" />
