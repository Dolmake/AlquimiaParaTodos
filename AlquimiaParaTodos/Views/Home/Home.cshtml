    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IEnumerable<AlquimiaParaTodos.Models.Category> 
@{
    int id = ViewBag.Category.ID;
    var category = Model.Single(cat => cat.ID == id);
}

<script src="/Scripts/jquery-1.10.2.min.js"
        type="text/javascript"></script>

<script>
    $(document).ready(function () {


        $(".productItem").click(function () {
            //alert("Name: " + this.name);
            var itemId = this.name;
            $.ajax(
            {
                url: '@Url.Action("ShowDetails", "ShopItem")',               
                data: { id: itemId },
                type: "post",
                cache: false,
                success: function (response) {
                      //do what ever you want here to extract the part you want
                        $('#m_modalBody_' + itemId).html(response);                       
                        $('#m_modal_' + itemId).modal('show');
                },
                error: function () {
                    alert("Se ha producido un error");
                }
            });
        });

        $(".btn-AddToCart").click(function () {
            var itemId = this.name;

            $.ajax(
                {
                    url: '@Url.Action("AddToCart", "ShoppingCart")',
                    data: { id: itemId },
                    type: "post",
                    cache: false                   
                });
            //$.post("~/ShoppingCart/AddToCart/", {
            //    id: itemId
            //}, function (data, textStatus) {

            //});

        });

     
    });

</script>
