@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AlquimiaParaTodos.Models.Product

@{
    ViewBag.Title = "Details";
    var categories = ViewBag.Categories;
    var category = ViewBag.ActiveCategory;
    var categoryCount = ViewBag.CategoriesCount;
}

<div class="container">

    <div class="row">

        <div class="col-md-3">
            <p class="lead">Alquimias Calvo</p>
            <div class="list-group">
                <ul>
                    @for (var i = 0; i < categoryCount; i++)
                    {
                        if (Model.Categories.ElementAt(i).ID == category.ID)
                        {
                            <div class="list-group-item active">
                                <a href="~/Home/Home/@Model.Categories.ElementAt(i).ID">@Html.DisplayFor(modelItem => Model.Categories.ElementAt(i).Name)</a>
                                @*@Html.ActionLink(categories.ElementAt(i).Name, "ShopItem", new { id = categories.ElementAt(i).ID })*@
                            </div>
                        }
                        else
                        {
                            <div class="list-group-item">
                                @*@Html.ActionLink(categories.ElementAt(i).Name, "Home", new { id = categories.ElementAt(i).ID })*@
                                <a href="~/Home/Home/@Model.Categories.ElementAt(i).ID">@Html.DisplayFor(modelItem => Model.Categories.ElementAt(i).Name)</a>
                            </div>
                        }
                    }
                </ul>

            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="@Html.DisplayFor(modelItem => Model.SliderImageUrl)" alt="">
                <div class="caption-full">
                    @*<div class="well">*@
                        <div class="text-right">
                            @*<a class="btn btn-success">*@@Html.ActionLink("Añadir al carrito", "AddToCart", "ShoppingCart", new { id = Model.ID }, new  {@class = "btn btn-success"})@*</a>*@
                        </div>
                    @*</div>*@
                    <h4 class="pull-right">@Html.DisplayFor(modelItem => Model.Price)</h4>
                    <h4>
                        <a href="#">@Html.DisplayFor(modelItem => Model.Title)</a>
                    </h4>
                    <p>See more snippets like these online store reviews at <a target="_blank" href="http://bootsnipp.com">Bootsnipp - http://bootsnipp.com</a>.</p>
                    <p>
                        Want to make these reviews work? Check out
                        <strong>
                            <a href="http://maxoffsky.com/code-blog/laravel-shop-tutorial-1-building-a-review-system/">this building a review system tutorial</a>
                        </strong>over at maxoffsky.com!
                    </p>
